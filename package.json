{
  "name": "cap-timetracking",
  "version": "0.0.1",
  "engines": {
    "node": "12.X"
  },
  "scripts": {
    "deploy": "cds deploy",
    "start": "cds watch && ui5 serve -o flpSandbox.html",
    "serve": "ui5 serve",
    "test": "run-s lint karma",
    "karma-ci": "karma start karma-ci.conf.js",
    "clearCoverage": "shx rm -rf coverage",
    "karma": "run-s clearCoverage karma-ci",
    "lint": "eslint .",
    "build:mta": "cds build/all && cds deploy && mbt build -p=cf",
    "deploy:cf": "npm run build:mta && cross-var cf deploy mta_archives/cap-timetracking_$npm_package_version.mtar",
    "build:ui": "ui5 build --clean-dest --include-task=generateManifestBundle --dest deployer/resources/webapp"
  },
  "dependencies": {
    "@openui5/sap.m": "^1.75.0",
    "@openui5/themelib_sap_belize": "^1.75.0",
    "@openui5/themelib_sap_fiori_3": "^1.75.0",
    "shx": "^0.3.2",
    "@sap/cds": "^3",
    "express": "^4",
    "hdb": "^0.17.1"
  },
  "devDependencies": {
    "sqlite3": "^4.1.1",
    "cross-var": "^1.1.0",
    "mbt": "1.0.11",
    "ui5-middleware-cfdestination": "^0.1.5",
    "@ui5/cli": "^1.14.0",
    "ui5-middleware-livereload": "^0.1.7",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-ui5": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "eslint": "^6.8.0"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "db": {
        "kind": "sqlite",
        "model": [
          "db",
          "srv"
        ],
        "credentials": {
          "database": "timetracking.db"
        },
        "[production]": {
          "kind": "hana"
        }
      }
    },
    "odata": {
      "version": "v4"
    }
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-cfdestination",
      "@openui5/sap.m",
      "@openui5/themelib_sap_belize",
      "@openui5/themelib_sap_fiori_3",
      "ui5-middleware-livereload"
    ]
  }
}